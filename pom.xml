	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId};singleton:=true</Bundle-SymbolicName>
						<Include-Resource>{maven-resources}</Include-Resource>

						<Bundle-Vendor>Anonymous</Bundle-Vendor>
						<Bundle-ClassPath>., {maven-dependencies}</Bundle-ClassPath>
						<Embed-Dependency>*</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<Import-Package>
							
<!-- 							org.apache.log4j.*;version="[1.2,2)", -->
<!-- 							org.protege.editor.core.*;version="5.0.0", -->
<!-- 							org.protege.editor.owl.*;version="5.0.0", -->
<!-- 							org.protege.editor.owl.ui;version="5.0.0", -->
							org.protege.editor.core,
							org.protege.editor.core.plugin,
							org.protege.editor.core.ui.preferences,
							org.protege.editor.owl,
							org.protege.editor.owl.ui,

							org.eclipse.core.runtime;registry=split,

							!com.ibm.uvm.tools,
							!com.mchange.v2.c3p0,
							!com.sun.java.swing.plaf.windows,
							!com.sun.jdmk.comm,
							!com.sun.org.apache.xml.internal.serialize,
							!javax.jmdns,
							!javax.jms,
							!javax.mail.*,
							!javax.servlet.*,
							!net.sf.ehcache.*,
							!net.spy.memcached,
							!org.apache.lucene.search.grouping,
							!org.apache.regexp,
							!org.hibernate.service.jdbc.connections.spi,
							!org.jboss.resource.adapter.jdbc.*,
							!sun.*,
							*
						</Import-Package>
						<Export-Package>{local-packages}</Export-Package>
					</instructions>
					<executions>
						<execution>
							<id>bundle-manifest</id>
							<phase>install</phase>
							<goals>
								<goal>manifest</goal>
							</goals>
						</execution>
					</executions>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<pde>true</pde>
				</configuration>
			</plugin>
		</plugins>
	</build>
